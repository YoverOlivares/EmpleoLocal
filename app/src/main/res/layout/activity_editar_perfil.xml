<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_bg">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/btn_save_changes"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Profile Photo Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="16dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_avatar"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardBackgroundColor="@color/login_blue_text"
                            app:cardCornerRadius="60dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/user_initials"
                                android:textColor="@color/white"
                                android:textSize="40sp"
                                android:textStyle="bold" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_alignBottom="@id/card_avatar"
                            android:layout_alignEnd="@id/card_avatar"
                            android:layout_margin="4dp"
                            app:cardBackgroundColor="@color/login_blue_text"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="4dp"
                            app:strokeColor="@color/white"
                            app:strokeWidth="2dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:src="@drawable/ic_camera"
                                app:tint="@color/white"
                                android:contentDescription="@string/change_profile_photo" />
                        </com.google.android.material.card.MaterialCardView>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/change_profile_photo"
                        android:textColor="@color/login_blue_text"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Información Personal -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_user"
                                app:tint="@color/login_blue_text"
                                android:contentDescription="@string/personal_info_title" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="@string/personal_info_title"
                                android:textColor="@color/login_logo_text"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/first_name_label"
                            android:textColor="@color/login_label"
                            android:textSize="12sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_input_gray"
                            android:paddingHorizontal="16dp"
                            android:text="Carlos"
                            android:inputType="textPersonName"
                            android:autofillHints="name"
                            android:textColor="@color/login_logo_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/last_name_label"
                            android:textColor="@color/login_label"
                            android:textSize="12sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_input_gray"
                            android:paddingHorizontal="16dp"
                            android:text="Pérez"
                            android:inputType="textPersonName"
                            android:autofillHints="name"
                            android:textColor="@color/login_logo_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/phone_label"
                            android:textColor="@color/login_label"
                            android:textSize="12sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_input_gray"
                            android:paddingHorizontal="16dp"
                            android:text="+51 987 654 321"
                            android:textColor="@color/login_logo_text"
                            android:autofillHints="phone"
                            android:inputType="phone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/login_email_label"
                            android:textColor="@color/login_label"
                            android:textSize="12sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_input_gray"
                            android:paddingHorizontal="16dp"
                            android:alpha="0.6">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="carlos.perez@example.com"
                                android:textColor="@color/login_logo_text" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_lock"
                                app:tint="@color/login_subtitle"
                                android:contentDescription="@string/email_no_edit_note" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/email_no_edit_note"
                            android:textColor="@color/login_subtitle"
                            android:textSize="11sp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Ubicación -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_location"
                                app:tint="@color/login_blue_text"
                                android:contentDescription="@string/location_title" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="@string/location_title"
                                android:textColor="@color/login_logo_text"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/distrito_label"
                            android:textColor="@color/login_label"
                            android:textSize="12sp" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            app:cardBackgroundColor="#F5F7FA"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeColor="#E8EDF2"
                            app:strokeWidth="1dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingHorizontal="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="Cajamarca"
                                    android:textColor="@color/login_logo_text" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_arrow_forward"
                                    android:rotation="90"
                                    app:tint="@color/login_subtitle"
                                    android:contentDescription="@string/select_distrito" />
                            </RelativeLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/search_radius_label"
                                android:textColor="@color/login_logo_text" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="5 km"
                                android:textColor="@color/login_blue_text"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <com.google.android.material.slider.Slider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:value="5"
                            android:valueFrom="1"
                            android:valueTo="30"
                            app:thumbColor="@color/login_blue_text"
                            app:trackColorActive="@color/login_blue_text"
                            app:trackColorInactive="#E0E0E0" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Habilidades -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_check_circle"
                                app:tint="@color/login_blue_text"
                                android:contentDescription="@string/profile_skills" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="@string/profile_skills"
                                android:textColor="@color/login_logo_text"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <com.google.android.material.chip.ChipGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:chipSpacingHorizontal="8dp"
                            app:chipSpacingVertical="8dp">

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/exp_mineria"
                                android:textColor="@color/white"
                                app:chipBackgroundColor="@color/login_blue_text"
                                app:closeIconVisible="true"
                                app:closeIcon="@drawable/ic_check"
                                app:closeIconTint="@color/white"
                                app:chipCornerRadius="24dp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/exp_mecanica"
                                android:textColor="@color/white"
                                app:chipBackgroundColor="@color/login_blue_text"
                                app:closeIconVisible="true"
                                app:closeIcon="@drawable/ic_check"
                                app:closeIconTint="@color/white"
                                app:chipCornerRadius="24dp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/exp_construccion"
                                android:textColor="@color/white"
                                app:chipBackgroundColor="@color/login_blue_text"
                                app:closeIconVisible="true"
                                app:closeIcon="@drawable/ic_check"
                                app:closeIconTint="@color/white"
                                app:chipCornerRadius="24dp" />

                            <com.google.android.material.chip.Chip
                                style="@style/Widget.Material3.Chip.Suggestion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/exp_enfermeria"
                                app:chipBackgroundColor="#E3F2FD"
                                app:chipStrokeWidth="0dp"
                                app:closeIconVisible="true"
                                app:closeIconTint="@color/login_blue_text"
                                app:chipCornerRadius="24dp" />

                            <com.google.android.material.chip.Chip
                                style="@style/Widget.Material3.Chip.Suggestion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/exp_docencia"
                                app:chipBackgroundColor="#E3F2FD"
                                app:chipStrokeWidth="0dp"
                                app:closeIconVisible="true"
                                app:closeIconTint="@color/login_blue_text"
                                app:chipCornerRadius="24dp" />

                        </com.google.android.material.chip.ChipGroup>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- CV -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_briefcase"
                                app:tint="@color/login_blue_text"
                                android:contentDescription="@string/profile_cv" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Curriculum Vitae (CV)"
                                android:textColor="@color/login_logo_text"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeColor="#E8EDF2"
                            app:strokeWidth="1dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="12dp">

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/card_pdf_icon"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardBackgroundColor="#FFEBEE"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="8dp"
                                        android:src="@drawable/ic_upload"
                                        app:tint="#F44336"
                                        android:contentDescription="@string/profile_cv" />
                                </com.google.android.material.card.MaterialCardView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:layout_toEndOf="@id/card_pdf_icon"
                                    android:layout_toStartOf="@id/tv_update"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/profile_cv_file"
                                        android:textColor="@color/login_logo_text"
                                        android:textStyle="bold"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Actualizado hace 2 días"
                                        android:textColor="@color/login_subtitle"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_update"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:text="@string/update"
                                    android:textColor="@color/login_blue_text"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_changes"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:text="@string/btn_save_changes"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/login_blue_text"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>