<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_icon_read"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardBackgroundColor="#F5F7FA"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/iv_notif_icon_read"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:src="@drawable/ic_check_circle"
            app:tint="@color/login_subtitle" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_notif_title_read"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Nueva empresa verificada (Gold Fields)"
        android:textColor="@color/login_subtitle"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_icon_read"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_notif_time_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Ayer, 08:15 AM"
        android:textColor="@color/bottom_unselected"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_notif_title_read"
        app:layout_constraintTop_toBottomOf="@id/tv_notif_title_read" />

</androidx.constraintlayout.widget.ConstraintLayout>