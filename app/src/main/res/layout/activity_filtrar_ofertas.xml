<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/ll_bottom_actions"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Radio de Búsqueda -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"
                        app:tint="@color/login_blue_text"
                        android:contentDescription="@string/search_radius_cajamarca" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/search_radius_cajamarca"
                        android:textColor="@color/login_logo_text"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distance_label"
                        android:textColor="@color/login_logo_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/bg_radius_tag"
                        android:backgroundTint="#E3F2FD"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:text="@string/radius_5km"
                        android:textColor="@color/login_blue_text"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <com.google.android.material.slider.Slider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:value="5"
                    android:valueFrom="1"
                    android:valueTo="20"
                    app:thumbColor="@color/login_blue_text"
                    app:trackColorActive="@color/login_blue_text"
                    app:trackColorInactive="#E0E0E0" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/radius_1km"
                        android:textColor="@color/login_subtitle"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/radius_20km"
                        android:textColor="@color/login_subtitle"
                        android:textSize="10sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/showing_jobs_near_center"
                    android:textColor="@color/login_subtitle"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F2F5" />

            <!-- Tipo de Empleo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/job_type_label"
                    android:textColor="@color/login_logo_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:checked="true"
                    android:text="@string/full_time_label"
                    android:layoutDirection="rtl"
                    android:textAlignment="viewEnd" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/part_time_label"
                    android:layoutDirection="rtl"
                    android:textAlignment="viewEnd" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hourly_label"
                    android:layoutDirection="rtl"
                    android:textAlignment="viewEnd" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/freelance_label"
                    android:layoutDirection="rtl"
                    android:textAlignment="viewEnd" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F2F5" />

            <!-- Sector Laboral -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/job_sector_label"
                    android:textColor="@color/login_logo_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cg_sectors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="8dp"
                    app:singleSelection="true"
                    app:selectionRequired="false">

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exp_mineria"
                        android:textColor="@color/selector_chip_text"
                        app:chipBackgroundColor="@color/selector_chip_background"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="0dp"
                        app:checkedIconVisible="true"
                        app:checkedIcon="@drawable/ic_check"
                        app:checkedIconTint="@color/white" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chip_salud"
                        android:textColor="@color/selector_chip_text"
                        app:chipBackgroundColor="@color/selector_chip_background"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="0dp"
                        app:checkedIconVisible="true"
                        app:checkedIcon="@drawable/ic_check"
                        app:checkedIconTint="@color/white" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exp_educacion"
                        android:textColor="@color/selector_chip_text"
                        app:chipBackgroundColor="@color/selector_chip_background"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="0dp"
                        app:checkedIconVisible="true"
                        app:checkedIcon="@drawable/ic_check"
                        app:checkedIconTint="@color/white" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exp_agropecuario"
                        android:textColor="@color/selector_chip_text"
                        app:chipBackgroundColor="@color/selector_chip_background"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="0dp"
                        app:checkedIconVisible="true"
                        app:checkedIcon="@drawable/ic_check"
                        app:checkedIconTint="@color/white" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exp_turismo"
                        android:textColor="@color/selector_chip_text"
                        app:chipBackgroundColor="@color/selector_chip_background"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="0dp"
                        app:checkedIconVisible="true"
                        app:checkedIcon="@drawable/ic_check"
                        app:checkedIconTint="@color/white" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exp_gastronomia"
                        android:textColor="@color/selector_chip_text"
                        app:chipBackgroundColor="@color/selector_chip_background"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="0dp"
                        app:checkedIconVisible="true"
                        app:checkedIcon="@drawable/ic_check"
                        app:checkedIconTint="@color/white" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exp_construccion"
                        android:textColor="@color/selector_chip_text"
                        app:chipBackgroundColor="@color/selector_chip_background"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="0dp"
                        app:checkedIconVisible="true"
                        app:checkedIcon="@drawable/ic_check"
                        app:checkedIconTint="@color/white" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exp_comercio"
                        android:textColor="@color/selector_chip_text"
                        app:chipBackgroundColor="@color/selector_chip_background"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="0dp"
                        app:checkedIconVisible="true"
                        app:checkedIcon="@drawable/ic_check"
                        app:checkedIconTint="@color/white" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exp_tecnologia"
                        android:textColor="@color/selector_chip_text"
                        app:chipBackgroundColor="@color/selector_chip_background"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="0dp"
                        app:checkedIconVisible="true"
                        app:checkedIcon="@drawable/ic_check"
                        app:checkedIconTint="@color/white" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exp_finanzas"
                        android:textColor="@color/selector_chip_text"
                        app:chipBackgroundColor="@color/selector_chip_background"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="0dp"
                        app:checkedIconVisible="true"
                        app:checkedIcon="@drawable/ic_check"
                        app:checkedIconTint="@color/white" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exp_municipalidad"
                        android:textColor="@color/selector_chip_text"
                        app:chipBackgroundColor="@color/selector_chip_background"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="0dp"
                        app:checkedIconVisible="true"
                        app:checkedIcon="@drawable/ic_check"
                        app:checkedIconTint="@color/white" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exp_ong"
                        android:textColor="@color/selector_chip_text"
                        app:chipBackgroundColor="@color/selector_chip_background"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="0dp"
                        app:checkedIconVisible="true"
                        app:checkedIcon="@drawable/ic_check"
                        app:checkedIconTint="@color/white" />

                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F2F5" />

            <!-- Salario Mínimo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/min_salary_label"
                    android:textColor="@color/login_logo_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_input_gray"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/from_label"
                            android:textColor="@color/login_subtitle"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/min_salary_val"
                            android:textColor="@color/login_logo_text"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="16dp"
                        android:layout_height="0dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_input_gray"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/to_label"
                            android:textColor="@color/login_subtitle"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/max_salary_val"
                            android:textColor="@color/login_logo_text"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.material.slider.RangeSlider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:valueFrom="1025"
                    android:valueTo="10000"
                    app:values="@array/initial_range_values"
                    app:thumbColor="@color/login_blue_text"
                    app:trackColorActive="@color/login_blue_text"
                    app:trackColorInactive="#E0E0E0" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear_filters"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="@string/btn_clear"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:strokeColor="@color/login_blue_text"
            android:textColor="@color/login_blue_text" />

        <View
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_apply"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1.5"
            android:backgroundTint="@color/color_primary_green"
            android:text="@string/btn_apply_filters"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:cornerRadius="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>