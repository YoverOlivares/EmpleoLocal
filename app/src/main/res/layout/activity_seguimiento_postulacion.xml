<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_bg">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/btn_withdraw"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Company Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardBackgroundColor="#2D5A5A"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="12dp"
                                android:src="@drawable/ic_briefcase"
                                app:tint="@color/white"
                                android:contentDescription="@string/desc_logo" />
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_check_circle"
                                    app:tint="@color/login_blue_text" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:text="@string/company_verified"
                                    android:textColor="@color/login_blue_text"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Enfermero/a Asistencial"
                                android:textColor="@color/login_logo_text"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hospital Regional Cajamarca"
                                android:textColor="@color/login_subtitle"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/application_status_title"
                    android:textColor="@color/login_logo_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Timeline -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <!-- Step 1 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/line1"
                            android:layout_width="2dp"
                            android:layout_height="40dp"
                            android:layout_below="@id/dot1"
                            android:layout_centerHorizontal="false"
                            android:layout_marginStart="15dp"
                            android:background="@color/color_primary_green" />

                        <ImageView
                            android:id="@+id/dot1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_check_circle"
                            app:tint="@color/color_primary_green" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/dot1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/step_applied_done"
                                android:textColor="@color/login_logo_text"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Completado • 10 Feb"
                                android:textColor="@color/color_primary_green"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <!-- Step 2 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp">

                        <View
                            android:id="@+id/line2"
                            android:layout_width="2dp"
                            android:layout_height="40dp"
                            android:layout_below="@id/dot2"
                            android:layout_marginStart="15dp"
                            android:background="@color/color_primary_green" />

                        <ImageView
                            android:id="@+id/dot2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_check_circle"
                            app:tint="@color/color_primary_green" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/dot2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/step_cv_review_done"
                                android:textColor="@color/login_logo_text"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Completado • 12 Feb"
                                android:textColor="@color/color_primary_green"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <!-- Step 3 (Current) -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp">

                        <View
                            android:id="@+id/line3"
                            android:layout_width="2dp"
                            android:layout_height="40dp"
                            android:layout_below="@id/dot3"
                            android:layout_marginStart="15dp"
                            android:background="#E0E0E0" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/dot3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:cardBackgroundColor="@color/login_blue_text"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="6dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="@color/white" />
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/dot3"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/step_interview_scheduled"
                                android:textColor="@color/login_logo_text"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/current_status_label"
                                android:textColor="@color/login_blue_text"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </RelativeLayout>

                    <!-- Step 4 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp">

                        <ImageView
                            android:id="@+id/dot4"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_check_circle"
                            app:tint="#E0E0E0" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/dot4"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/step_final_result"
                                android:textColor="@color/login_subtitle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pending_interview"
                                android:textColor="@color/login_subtitle"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <!-- Interview Details Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardBackgroundColor="#EDF2F7"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_notifications"
                                app:tint="@color/login_blue_text" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="@string/interview_details_title"
                                android:textColor="@color/login_blue_text"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/card_cal"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_calendar" />
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@id/card_cal"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_date_time"
                                    android:textColor="@color/login_subtitle"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/interview_time"
                                    android:textColor="@color/login_logo_text"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/card_loc"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_location"
                                    app:tint="@color/login_blue_text" />
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@id/card_loc"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ubicación"
                                    android:textColor="@color/login_subtitle"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Av. Atahualpa 850, Cajamarca"
                                    android:textColor="@color/login_logo_text"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/view_on_map"
                                    android:textColor="@color/login_blue_text"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </RelativeLayout>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="20dp"
                            android:backgroundTint="@color/login_blue_text"
                            android:text="@string/btn_add_calendar"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/ic_calendar"
                            app:iconGravity="textStart"
                            app:iconTint="@color/white" />

                        <!-- Mini Map -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginTop="16dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_launcher_background" />

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_location"
                                app:tint="@color/login_blue_text" />
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_withdraw"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:text="@string/btn_withdraw_application"
            android:textAllCaps="false"
            android:textColor="#F44336"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_withdraw"
            app:iconGravity="textStart"
            app:iconTint="#F44336"
            app:layout_constraintBottom_toBottomOf="parent"
            app:strokeColor="#F44336" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>