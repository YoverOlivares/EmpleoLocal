<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#F0F7FF"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeColor="#1F89E5"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="#D1E3F5"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_notif_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/login_blue_text" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_notif_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:text="Nueva oferta a 0.8km"
                android:textColor="@color/login_logo_text"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/iv_dot"
                app:layout_constraintStart_toEndOf="@id/cv_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_notif_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Hace 5 min"
                android:textColor="@color/login_subtitle"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/tv_notif_title"
                app:layout_constraintTop_toBottomOf="@id/tv_notif_title" />

            <ImageView
                android:id="@+id/iv_dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/bg_dot_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>