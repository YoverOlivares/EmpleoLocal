<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Notif Tabs -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:tabIndicatorColor="@color/login_blue_text"
                app:tabSelectedTextColor="@color/login_blue_text"
                app:tabTextColor="@color/login_subtitle"
                app:tabMode="fixed">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_notifications_all" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_notifications_proximity" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_notifications_applications" />
            </com.google.android.material.tabs.TabLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/section_unread"
                    android:textColor="@color/login_subtitle"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Unread Notifications -->
                <include layout="@layout/item_notificacion_unread" />

                <!-- Item 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="#F0F7FF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#1F89E5"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_icon_2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardBackgroundColor="#D1E3F5"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="12dp"
                                android:src="@drawable/ic_my_location"
                                app:tint="@color/login_blue_text" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tv_notif_title_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:text="@string/notif_5km_radio_title"
                            android:textColor="@color/login_logo_text"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@id/iv_dot_2"
                            app:layout_constraintStart_toEndOf="@id/cv_icon_2"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/notif_time_15min"
                            android:textColor="@color/login_subtitle"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="@id/tv_notif_title_2"
                            app:layout_constraintTop_toBottomOf="@id/tv_notif_title_2" />

                        <ImageView
                            android:id="@+id/iv_dot_2"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/bg_dot_blue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Item 3 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="#F0F7FF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#1F89E5"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_icon_3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardBackgroundColor="#D1E3F5"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="12dp"
                                android:src="@drawable/ic_eye"
                                app:tint="@color/login_blue_text" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tv_notif_title_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:text="@string/notif_app_viewed_title"
                            android:textColor="@color/login_logo_text"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@id/iv_dot_3"
                            app:layout_constraintStart_toEndOf="@id/cv_icon_3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/notif_time_1h"
                            android:textColor="@color/login_subtitle"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="@id/tv_notif_title_3"
                            app:layout_constraintTop_toBottomOf="@id/tv_notif_title_3" />

                        <ImageView
                            android:id="@+id/iv_dot_3"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/bg_dot_blue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/section_read"
                    android:textColor="@color/login_subtitle"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Read Notification -->
                <include layout="@layout/item_notificacion_read" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>